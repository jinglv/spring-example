<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Bean的构造方法的属性注入-->
    <bean id="user" class="com.spring.example.bean.injection.User">
        <constructor-arg name="name" value="杨二车娜姆"/>
        <constructor-arg name="age" value="58"/>
    </bean>

    <!--Bean的setter方法的属性注入-->
    <bean id="person" class="com.spring.example.bean.injection.Person">
        <property name="name" value="凤姐"/>
        <property name="age" value="38"/>
        <property name="cat" ref="cat"/><!--ref用来引入其他Bean的id或者name-->
    </bean>

    <bean id="cat" class="com.spring.example.bean.injection.Cat">
        <property name="name" value="Ketty"/>
    </bean>

    <!--Bean的p名称空间的属性注入-->
    <bean id="person-p" class="com.spring.example.bean.injection.Person" p:name="芙蓉姐姐" p:age="48" p:cat-ref="cat-p">
    </bean>

    <bean id="cat-p" class="com.spring.example.bean.injection.Cat" p:name="Mimi"/>

    <!--Bean的SpEL的属性注入-->
    <bean id="product" class="com.spring.example.bean.injection.Product">
        <property name="name" value="#{'男装'}"/>
        <property name="price" value="#{productInfo.calculatePrice()}"/>
        <property name="category" value="#{category}"/>
    </bean>

    <bean id="category" class="com.spring.example.bean.injection.Category">
        <property name="name" value="#{'服装'}"/>
    </bean>

    <bean id="productInfo" class="com.spring.example.bean.injection.ProductInfo"/>

    <!--集合类型的属性注入-->
    <bean id="collectionBean" class="com.spring.example.bean.collection.CollectionBean">
        <!--数组类型-->
        <property name="arrs">
            <list>
                <value>aaa</value>
                <value>bbb</value>
                <value>ccc</value>
            </list>
        </property>
        <!--list集合的类型-->
        <property name="list">
            <list>
                <value>one</value>
                <value>two</value>
                <value>three</value>
            </list>
        </property>
        <!--set集合的类型-->
        <property name="set">
            <set>
                <value>zzz</value>
                <value>xxx</value>
                <value>ccc</value>
            </set>
        </property>
        <!--map集合的类型-->
        <property name="map">
            <map>
                <entry key="one" value="111"/>
                <entry key="two" value="222"/>
                <entry key="three" value="333"/>
            </map>
        </property>
        <!--Properties属性-->
        <property name="properties">
            <props>
                <prop key="username">root</prop>
                <prop key="password">123123</prop>
            </props>
        </property>
    </bean>

</beans>